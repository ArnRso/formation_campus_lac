{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des livres</h1>
    <div id="search-form">
        {{ form(form) }}
    </div>
    <a href="{{ path('book_new')}}">Créer un nouveau livre</a>
    <div class="row">
        {% for book in books %}
            <div class="col col-3">
                <article class="card">
                    <img src="" class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title">{{ book.title }}</h5>
                        <p class="card-text">
                            Ecrit par {{ book.author }}
                            <br>
                            ISBN : {{ book.isbn }}
                        </p>
                        <a href="{{ path('book_detail', {id: book.id}) }}" class="btn btn-primary">Voir le détail</a>
                    </div>
                </article>
            </div>
        {% endfor %}
    </div>
{% endblock body %}